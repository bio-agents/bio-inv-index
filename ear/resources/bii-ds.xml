<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE datasources
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">

<datasources>
    <local-tx-datasource>
        <jndi-name>biiDatasource</jndi-name>
        <connection-url>${jdbc.url}</connection-url>
        <driver-class>${jdbc.driverClassName}</driver-class>
        <connection-property name="defaultNChar">true</connection-property>
        <user-name>${jdbc.username}</user-name>
        <password>${jdbc.password}</password>

    </local-tx-datasource>
</datasources>

